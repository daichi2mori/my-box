{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"include": ["app/**/*.ts", "app/**/*.tsx"],
		"ignore": ["node_modules", ".wrangler", "dist", "build"]
	}
}
